@{
    Layout = null;
} 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <!-- Favicons -->
    <link href="~/lib/Content/img/sprout.png" rel="icon">
    <link href="~/lib/Content/img/apple-touch-icon.png" rel="apple-touch-icon">
    <!-- Bootstrap core CSS -->
    <link href="~/lib/Content/lib/bootstrap/css/bootstrap.min.css"
          rel="stylesheet">
    <!--external css-->
    <link href="~/lib/Content/lib/font-awesome/css/font-awesome.css"
          rel="stylesheet" />
    <link rel="stylesheet" type="text/css"
          href="~/lib/Content/css/zabuto_calendar.css">
    <link rel="stylesheet" type="text/css"
          href="~/lib/Content/lib/gritter/css/jquery.gritter.css" />
    <!-- Custom styles for this template -->
    <link href="~/lib/Content/css/style.css" rel="stylesheet">
    <link href="~/lib/Content/css/style-responsive.css" rel="stylesheet">
    <script src="~/lib/Content/lib/chart-master/Chart.js"></script>
</head>
<body>
    <section id="container">
        <!--header start-->
        <header class="header black-bg">
            <div class="sidebar-toggle-box">
                <div class="fa fa-bars tooltips" data-placement="right" dataoriginal-title="Klik Disini"></div>
            </div>
            <!--logo start-->
            <a href="@Url.Action("Index", "Home")"
               class="logo"><b>HR & PAYROLL <span>SPROUT SOLUTIONS</span></b></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!-- notification start -->
            </div>
        </header>
        <!--header end-->
        <!--
    *******************************************************************************
    ***************************************************************************
    MAIN SIDEBAR MENU
    *******************************************************************************
    **************************************************************************** --
    >
    <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <p class="centered">
                        <a>
                            <img src="~/lib/Content/img/sprout.png" class="img-circle" width="100">
                        </a>
                    </p>
                    <li class="mt">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-dashboard"></i>
                            <span>Home</span>
                        </a>
                    </li>    
                    <li class="sub-menu">
                        <a href="@Url.Action("Index", "Employees")">
                            <i class="fa fa-user-circle"></i>
                            <span>Employees</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a href="@Url.Action("Index", "Payrolls")">
                            <i class="fa fa-money"></i>
                            <span>Payrolls</span>
                        </a>
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--
    *******************************************************************************
    ***************************************************************************
    MAIN CONTENT
    *******************************************************************************
    **************************************************************************** --
    >
    <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-9 main-chart">
                        <!--CUSTOM CHART START -->
                        @RenderBody()
                    </div>
                    <!-- /col-lg-9 END SECTION MIDDLE -->
                    <!--
                *******************************************************************************
                ***************************************************************************
                RIGHT SIDEBAR CONTENT
                *******************************************************************************
                **************************************************************************** --
                >
                <!-- /col-lg-3 -->
                </div>
                <!-- /row -->
            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="navbar-fixed-bottom">
            <div class="text-center">
                <p>
                    &copy; Copyrights <strong>Haidar Aldi Wintoro</strong>. All Rights Reserved
                </p>
                <div class="credits">

                    Created with Dashio template by <a href="https://templatemag.com/">TemplateMag</a>
                </div>
                <a href="index.html#" class="go-top">
                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="~/lib/Content/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/Content/lib/bootstrap/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript"
            src="~/lib/Content/lib/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/lib/Content/lib/jquery.scrollTo.min.js"></script>
    <script src="~/lib/Content/lib/jquery.nicescroll.js"
            type="text/javascript"></script>
    <script src="~/lib/Content/lib/jquery.sparkline.js"></script>
    <!--common script for all pages-->
    <script src="~/lib/Content/lib/common-scripts.js"></script>
    <script type="text/javascript"
            src="~/lib/Content/lib/gritter/js/jquery.gritter.js"></script>
    <script type="text/javascript" src="~/lib/Content/lib/gritterconf.js"></script>
    <!--script for this page-->
    <script src="~/lib/Content/lib/sparkline-chart.js"></script>
    <script src="~/lib/Content/lib/zabuto_calendar.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
